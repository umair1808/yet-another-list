
    <div class="list-container pt-5">

        <div class="box">
            <div class="list-main-header">
                <h1><%= day %></h1>
            </div>    
        </div>

        <div class="box">
            <h2 class="list-sub-header" >
                <%= item.name %>
            </h2>
        </div>

    <div class="box items-box">

        <% for(let i in item.tasks) { %>
            <form action="/updateTask/<%= item._id%>/<%= item.tasks[i]._id%>" method="post">
                <div class="item">
                    <input type="checkbox" onChange="this.form.submit()" name="check"
                        <% if(item.tasks[i].status === true) { %>
                                checked
                        <% } %>>
                    <p>
                        <%= item.tasks[i].name %>
                    </p>
                    <button type="submit" formaction="/deleteTask/<%= item._id%>/<%= item.tasks[i]._id%>"  name="delete" class="btn delete-btn" value="" ><i class="fas fa-minus-circle"></i></button>
                </div>
            </form>
            
            <% } %>

                <form class="item" action="/list/<%= item._id %>" method="post">
                    <input type="text" name="item" placeholder="new task" autocomplete="off">
                    <button class="add-button" type="submit">+</button>
                </form>
    </div>

</div>
